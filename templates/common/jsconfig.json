{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "checkJs": true,
    "allowJs": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@actions/*": ["./app/actions/*"],
      "@titan/*": ["./titan/*"]
    },
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
    "app/**/*",
    "titan/**/*",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "server",
    ".titan"
  ]
}